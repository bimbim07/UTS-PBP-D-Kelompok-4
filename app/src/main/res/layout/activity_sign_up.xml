<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="REGISTRATION"
            android:textAlignment="center"
            android:textColor="#BD7F23"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Silahkan Daftarkan Diri Anda"
            android:textAlignment="center"
            android:textColor="#BD7F23"
            android:textSize="15sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/ImgLogo"
            android:layout_width="189dp"
            android:layout_height="259dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:src="@drawable/hotel" />


        <EditText
            android:id="@+id/edEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImgLogo"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/ic_baseline_mail_24"
            android:hint="Email" />

        <EditText
            android:id="@+id/edFullname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edEmail"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:hint="Fullname" />

        <EditText
            android:id="@+id/edUsernamereg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edFullname"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:hint="Username" />

        <EditText
            android:id="@+id/edPasswordreg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edUsernamereg"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edPasswordreg"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#F33325"
            android:text="Daftar"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtsudah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnDaftar"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="2sp"
            android:text="DENGAN MENDAFTAR, ANDA SETUJU \nTERKAIT PRIVASI KAMI "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvMasuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtsudah"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Sudah Punya Akun? Masuk"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>